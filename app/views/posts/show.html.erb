<% if @post
     content_for :title, @post.title
   end  %>

<h1><%= @post.title %> (
    <% if @post.favoured(current_user) %>
        <%= link_to('Delete from favourites', unfavour_post_path(@post)) %>
    <% else %>
        <%= link_to('Save as favourite', favour_post_path(@post)) %>
    <% end %>
)</h1>




<p>
  <%= link_to @post.url, @post.url %> 
</p>
<p>
  <%= @post.description %> 
</p>

<p>
  <strong>User:</strong>
  <%= link_to @post.user.name, @post.user %>
</p>


<ul class="nav">
  <li class="nav-item">
    Kategorien: 
  </li>
  <% @post.categories.each do |category| %>
      <li class="nav-item">
        <%= link_to category.name, category %>
      </li>
  <% end %>
</ul>


<% if can? :update, @post %>
  <%= link_to 'Edit', edit_post_path(@post) %> |
<% end %>
<%= link_to 'Back', posts_path %>

<h2>Comments</h2>
<h3>Add new comment</h3>
<%= render "comments/form" %>
<br>

<% @post.comments.order(created_at: :desc).each do |c| %>
  <div class="comment">
    <strong><%= c.user.name %>:</strong>
    <%= c.text %> 

    <%= link_to [@post, c], method: :delete, data: { confirm: 'Sind Sie sicher?' }, class: "" do %>
      <i style="color:red" class="">x</i>
    <% end %>
  </div>
<% end %>


